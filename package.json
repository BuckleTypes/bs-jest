{
  "name": "bs-jest",
  "version": "0.2.0",
  "description": "BuckleScript bindings to the Jest testing framework",
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "test": "npm run build && jest --coverage && npm run coverage",
    "watch:bsb": "bsb -make-world -w",
    "watch:jest": "jest --coverage --watchAll",
    "watch:screen": "screen -c .screenrc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reasonml-community/bs-jest.git"
  },
  "keywords": [
    "reason",
    "bucklescript",
    "jest",
    "test"
  ],
  "author": "glennsl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reasonml-community/bs-jest/issues"
  },
  "homepage": "https://github.com/reasonml-community/bs-jest#readme",
  "devDependencies": {
    "bs-platform": "^1.9.0",
    "coveralls": "^3.0.0",
    "nyc": "^11.4.1"
  },
  "dependencies": {
    "jest": "^22.0.1"
  }
}
